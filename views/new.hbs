<h1>Add your recommended restaurant</h1>
<form action="/restaurant" method="POST">
  <div style="margin-top:15px;">
    <input type="text" name="name" id="name" placeholder="" required>
    <label for="name">Name</label>
  </div>
  <div style="margin-top:15px;">
    <input type="text" name="name_en" id="name_en" placeholder="">
    <label for="name_en">English name</label>
  </div>
  <div style="margin-top:15px;">
    <input list="categorys" name="category" id="category" placeholder="">
    <datalist id="categorys">
      <option>中式料理</option>
      <option>日本料理</option>
      <option>美式料理</option>
      <option>中東料理</option>
    </datalist>
    <label for="category">Category</label>
  </div>
  <div style="margin-top:15px;">
    <input type="type" name="image" id="image" placeholder="input url-link.." required>
    <label for="image">Photo</label>
  </div>
  <div style="margin-top:15px;">
    <input type="text" name="location" id="location" placeholder="">
    <label for="location">Location</label>
  </div>
  <div style="margin-top:15px;">
    <input type="text" name="phone" id="phone" placeholder="">
    <label for="phone">Phone</label>
  </div>
  <div style="margin-top:15px;">
    <input type="text" name="google_map" id="google_map" placeholder="input url-link">
    <label for="google_map">Google map</label>
  </div>
  <div style="margin-top:15px;">
    <input type="number" name="rating" id="rating" placeholder="">
    <label for="rating">Rating</label>
  </div>
  <div style="margin-top:15px;">
    <textarea rows="5" cols="50" name="description" id="description" placeholder="" required></textarea>
    <label for="description">Description</label>
  </div>
  <div>
    <button type="submit" class="btn btn-outline-primary" style="margin-top:15px;">Save</button>
  </div>
</form>
<form action="/restaurants" method="GET" style="display:inline;">
  <button type="submit" class="btn btn-outline-secondary" style="margin-top:15px;">Back</button>
</form>
